@model IEnumerable<KlipboardAssessment.Models.Transaction>

<div class="text-center">
    @if (ViewBag.CustomerName != null)
    {
        <h1>Transactions for @ViewBag.CustomerName</h1>
    }
    else
    {
        <h1>All Transactions</h1>
    }

    <p>
        <a class="text-center btn btn-primary"
           asp-controller="Transactions"
           asp-action="AddTransaction">Add Transaction</a>
    </p>
</div>

<div class="d-flex justify-content-end mb-2">
    <span class="badge bg-@ViewBag.BalanceClass p-3 fs-5">
        Balance: @ViewBag.CustomerBalance
    </span>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            @* <td> *@
            @*     <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> *@
            @*     <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            @* </td> *@
        </tr>
    }
    </tbody>
</table>
